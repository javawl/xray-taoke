*{
  		padding: 0;
  		margin: 0;
  	}
    html, body {
      position: relative;
      height: 100%;
      overflow-x: hidden;
    }
    body {
      background: #eee;
      font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
      font-size: 14px;
      color:#000;
      margin: 0;
      padding: 0;
    }
    .swiper-container {
      width: 100%;
      height: 100%;
    }
    .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;

      /* Center slide text vertically */
      display: -webkit-box;
      display: -ms-flexbox;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -ms-flex-pack: center;
      -webkit-justify-content: center;
      justify-content: center;
      -webkit-box-align: center;
      -ms-flex-align: center;
      -webkit-align-items: center;
      align-items: center;
    }
   .css{
transition: width 2s;
-moz-transition: width 2s;	/* Firefox 4 */
-webkit-transition: width 2s;	/* Safari 和 Chrome */
-o-transition: width 2s;	/* Opera */
}
.slide_bg{
	background:#fd8c00;
	width: 100%;
	height: 100%;
}
.bg{
	width:100vw;
	height: 100vh;
}
.tip{
	border-radius: 2vw;
	padding: 3%;
	color: #FFFFFF;
	text-align:left;
	opacity: 0;
	position: absolute;
	top: 48%;
	left: 20%;
	width: 54%;
	font-size: 4vw;
	background:rgba(0,0,0,0.7);
}
.jiantou{
	position: absolute;
	top:94%;
	opacity: 0;
	left: 47vw;
	width: 6vw;
	height: 6vw;
	background-image: url(../img/shang.png);
	background-size: 100%;
}
.title{
	position: absolute;
	width: 100%;
	display: flex;
	justify-content: center;
	font-size: 4vw;
	align-items: center;
	top: 7%;
	font-weight: 500;
	font-family: "微软雅黑";
}
.three_skip{
	position: absolute;
	width: 92vw;
	left: 4vw;
	top:13vh;
}
.three_skip ul{
	width:100%;
}
.three_skip ul li{
	width: 100%;
	height:9vh;
	margin-bottom: 20px;
	list-style: none;
	background: rgba(255,255,255,0.5);
	display: flex;
	align-items: center;
}
.three_skip ul li a{
	width: 100%;
	height: 100%;
	line-height: 9vh;
	text-align: left;
	display: inline-block;
	text-decoration: none;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000; 
	font-family: PingFang-SC-Medium;
