    public Map<String, String> getMpInfo(String appid) {
        String key = prefix + appid;
        Map<String, String> map = cache.hgetAll(key);
        if (map.isEmpty())
            throw new RtException(Constant.para_err, "empty mpinfo,appid:" + appid);
        return map;
    }

