    private int dataRank(double cpmoney, int itemsale, double tkmoney) {
        int state = 0;
        if (cpmoney > 30)
            state++;
        if (itemsale >= 1000)
            state++;
        if (tkmoney >= 4)
            state++;
        return state;

    }

