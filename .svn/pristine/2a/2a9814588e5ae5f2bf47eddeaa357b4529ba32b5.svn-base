    public int getActiveSize(String appid) {
        String key = active + appid;
        int count = 0;
        long active = System.currentTimeMillis() - 172800000;
        Set<Tuple> sets = cache.zrangeWithScores(key, 0, -1);
        for (Tuple tuple : sets) {
            if (tuple.getScore() > active)
                ++count;
        }
        return count;
    }
    
