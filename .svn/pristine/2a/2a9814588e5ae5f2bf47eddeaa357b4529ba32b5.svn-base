    // 缓存公众号名称
    public void setMpNames() {
        String key = prefix + "names";
        Map<String, String> map = new HashMap<String, String>();
        for (MpInfo data : MpInfo.dao.queryAllInuse()) {
            map.put(data.getStr("appid"), data.getStr("name"));
        }
        cache.hmset(key, map);
    }

