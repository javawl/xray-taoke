	private void sortByType(List<com.xray.taoke.admin.vo.TbItemVo> list, String orderby) {
		Collections.sort(list, new Comparator<com.xray.taoke.admin.vo.TbItemVo>() {

			public int compare(com.xray.taoke.admin.vo.TbItemVo o1, com.xray.taoke.admin.vo.TbItemVo o2) {

				switch (orderby) {
				case "juanhou desc":
					if (o1.getJuanhou() > o2.getJuanhou()) {
						return -1;
					}
					if (o1.getJuanhou() == o2.getJuanhou()) {
						return 0;
					}

					break;
				case "juan desc":

					break;
				case "yongjin desc":
					double d1 = Double.valueOf(o1.getYongjin());
					double d2 = Double.valueOf(o2.getYongjin());
					if (d1 > d2) {
						return -1;
					}
					if (d1 == d2) {
						return 0;
					}
					break;
				case "sales desc":
					if (o1.getSales() > o2.getSales()) {
						return -1;
					}
					if (o1.getSales() == o2.getSales()) {
						return 0;
					}
					break;
				default:
					break;
				}

				return 1;
			}
		});
	}

