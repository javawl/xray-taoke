<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>淘宝搜券 | ${_TITLE_!}</title>
		<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
		<link rel="stylesheet" href="${cxt!}/addon/select2/select2.min.css">
		<link rel="stylesheet" href="${cxt!}/addon/jQueryPage/jquery.page.css">
		<link rel="stylesheet" href="${cxt!}/addon/webUploader/webuploader.css">
		<link rel="stylesheet" href="${cxt!}/addon/timepicker/bootstrap-timepicker.min.css">
		<link rel="stylesheet" href="${cxt!}/addon/iCheck/all.css">
		<#include "/template/inc/inc.html">
	</head>

	<body class="hold-transition skin-blue sidebar-mini">
		<div class="wrapper">
			<#include "/template/inc/header.html">
				<div class="content-wrapper">
					<!--content header-->
					<section class="content-header">
						<ol class="breadcrumb" style="left: 10px;">
							<li>淘宝搜券</li>
							<li class="active">淘宝搜券</li>
						</ol>
						<h1><small></small></h1>
					</section>
					<!--/content header-->
					<section class="content">
						<div class="row">
							<div class="col-xs-12">
								<div class="box box-primary">
									<div class="box-header">

										<form action="${cxt!}/linkinfo/goSouquan">
											<div class="row">
												<div class="col-md-2">
													<select id="pkey" name="pkey" class="form-control select2 downList2">
														<option value="">选择PID</option>
														<#list configList as item>
															<option value='${item.seqid!}' <#if pkey==item.seqid>selected</#if> >${item.remark!}</option>
														</#list>
													</select>
												</div>
												<div class="col-md-2">
													<input name="word" id="word" type="text" class="form-control" value="${word!}" placeholder="关键字" />
												</div>
												<div class="col-md-4">
													<input id="pno" name="pno" type="hidden" value="${page.pno!}" />
													<input id="orderby" name="orderby" type="hidden" value="${orderby!}" />
													<button id="search" type="submit" style="display: none;" class="btn btn-default">查询</button>
													<a href="javascript:;" class="btn btn-primary" onclick="doHaodanku()">好单库</a>
													<a href="javascript:;" class="btn btn-danger" target="_blank" onclick="doAliMama()">后妈</a>
													<a href="javascript:;" class="btn btn-warning" target="_blank" onclick="showChaquan('')">查券</a>
													<a href="javascript:;" class="btn btn-info" target="_blank" onclick="hdkChaQuan('')">群文案</a>
													<a href="javascript:;" class="btn btn-default" target="_blank" onclick="doReset()">清空</a>
												</div>

												<div class="col-md-4">
													<div class="pull-right">
														<a href="javascript:;" class="btn btn-default" target="_blank" onclick="doCreate()">一键生成</a>
														<a href="${cxt!}/linkinfo/goCart" target="_blank" class="btn btn-warning"><i class="fa fa-shopping-cart"></i><span id="cart_size">(${cart_size!'0'})</span></a>
														<a href="${cxt!}/linkconfig/goList" class="btn btn-primary" target="_blank">设置</a>
														<a href="${cxt!}/linkinfo/goList" class="btn btn-default" target="_blank">记录</a>
													</div>
												</div>
											</div>
										</form>
									</div>
									<!-- box-header -->
									<div class="box-body" style="overflow-x: auto;">
										<div class="dataTables_wrapper form-inline dt-bootstrap">
											<div class="row">
												<div class="col-sm-6">
													<table class="table table-bordered table-hover">
														<tbody>
															<#list dataList1 as item>
																<tr>
																	<td><img class="cart_shop" data-id="${item.itemid!}" src="${item.itempicmin!}" width="120px"></td>
																	<td>
																		<a href="https://item.taobao.com/item.htm?id=${item.itemid!}" target="_blank">${item.itemtitle!}</a>
																		<br />
																		<span>【券后】</span>
																		<span>${item.tkprice!}</span>
																		<span>【原价】</span>
																		<span>${item.itemprice!}</span>
																		<br />
																		<span>【销量】</span>
																		<#if item.itemsale lt 1000>
																			<span class="text-green">${item.itemsale!}</span>
																			<#else>
																				<span class="text-red">${item.itemsale!}</span>
																		</#if>
																		<br />
																		<span>【券值】</span>
																		<#if item.cpmoney lt 30>
																			<span class="text-green">${item.cpmoney!}</span>
																			<#else>
																				<span class="text-red">${item.cpmoney!}</span>
																		</#if>
																		<br />
																		<span>【佣金】</span>
																		<#if item.tkmoney lt 4>
																			<span class="text-green">${item.tkmoney?string('0.0#')}</span>
																			<#else>
																				<span class="text-red">${item.tkmoney?string('0.0#')}</span>
																		</#if>
																	</td>
																	<td>
																		<a href="javascript:;" class="btn btn-default" onclick="doUpdateItem('${item.itemid!}')" data-id='${item.itemid!}'>更新</a>
																		<br/>
																		<a href="javascript:;" style="margin-top: 5px;" class="btn btn-default" onclick="showChaquan('https://item.taobao.com/item.htm?id=${item.itemid!}');doChaquan()" data-id='${item.itemid!}'>转链</a>
																	</td>
																</tr>
															</#list>
														</tbody>
													</table>
												</div>

												<div class="col-sm-6">
													<table class="table table-bordered table-hover">
														<tbody>
															<#list dataList2 as item>
																<tr>
																	<td><img class="cart_shop" data-id="${item.itemid!}" src="${item.itempicmin!}" width="120px"></td>
																	<td>
																		<a href="https://item.taobao.com/item.htm?id=${item.itemid!}" target="_blank">${item.itemtitle!}</a>
																		<br />
																		<span>【券后】</span>
																		<span>${item.tkprice!}</span>
																		<span>【原价】</span>
																		<span>${item.itemprice!}</span>
																		<br />
																		<span>【销量】</span>
																		<#if item.itemsale lt 1000>
																			<span class="text-green">${item.itemsale!}</span>
																			<#else>
																				<span class="text-red">${item.itemsale!}</span>
																		</#if>
																		<br />
																		<span>【券值】</span>
																		<#if item.cpmoney lt 30>
																			<span class="text-green">${item.cpmoney!}</span>
																			<#else>
																				<span class="text-red">${item.cpmoney!}</span>
																		</#if>
																		<br />
																		<span>【佣金】</span>
																		<#if item.tkmoney lt 4>
																			<span class="text-green">${item.tkmoney?string('0.0#')}</span>
																			<#else>
																				<span class="text-red">${item.tkmoney?string('0.0#')}</span>
																		</#if>
																	</td>
																	<td>
																		<a href="javascript:;" class="btn btn-default" onclick="doUpdateItem('${item.itemid!}')" data-id='${item.itemid!}'>更新</a>
																		<br/>
																		<a href="javascript:;" style="margin-top: 5px;" class="btn btn-default" onclick="showChaquan('https://item.taobao.com/item.htm?id=${item.itemid!}');doChaquan()" data-id='${item.itemid!}'>转链</a>
																	</td>

																</tr>
															</#list>
														</tbody>
													</table>
												</div>
											</div>
											<#if dataList1.size()==0>
												<div style="text-align:center;">
													<p class="text-yellow"><i class="icon fa fa-warning"></i>&nbsp;没有查询到数据！</p>
												</div>
												<hr />
											</#if>
											<#if (page.pcount>0)>
												<div>
													<div class="tcdPageCode pull-right" style="padding: 0;"></div>
													<span class="pull-right">共查询到&nbsp;<span style="color: red;">${page.count}</span>&nbsp;条相关数据&nbsp;</span>
												</div>
											</#if>

										</div>
										<!--<div class="tcdPageCode pull-right"></div>-->
									</div>
									<!-- /.box-body -->
								</div>
								<!-- /.box -->
							</div>
						</div>
					</section>
				</div>
				<#include "/template/inc/footer.html">
		</div>
		<script src="${cxt!}/addon/jQueryPage/jquery.page.js"></script>
		<script src="${cxt!}/addon/select2/select2.full.min.js"></script>
		<script src="${cxt!}/addon/webUploader/webuploader.js"></script>
		<script src="${cxt!}/addon/timepicker/bootstrap-timepicker.min.js"></script>
		<script src="${cxt!}/addon/datepicker/bootstrap-datepicker.js"></script>
		<script src="${cxt!}/addon/datepicker/locales/bootstrap-datepicker.zh-CN.js"></script>pt>
		<script src="${cxt!}/addon/iCheck/icheck.min.js"></script>
		<script src="${cxt!}/addon/clipboard/clipboard.min.js"></script>
		<script src="${cxt!}/addon/wangEditor/wangEditor.min.js"></script>
		<script>
			var checkList = [];
			var editor = null;
			
			
			
			$(document).ready(function() {
				$(".select2").select2();

				var have_word = localStorage.getItem("word");
				if(have_word != null) {
					$("#word").val(have_word);
				}

				if($("table").width() < 1000) {
					$(".box-body").css("overflow", "auto");
				}

				$(".tcdPageCode").createPage({
					pageCount: ${
						page.pcount!
					},
					current: ${
						page.pno!
					},
					backFn: function(n) {
	
		
						var have_word = localStorage.getItem("word");
						ajaxGet("${cxt!}/linkinfo/doHaodanku", {
							page: n,
							keyword: have_word
						}, function(rtn) {
							if(rtn.code != 1) {
								layer.msg(JSON.stringify(rtn), {
									icon: 2
								});
								return;
							}
								$('#pno').val(n);
								$('#search').click();

						});
					
						
						
						

					}
				});

				$(".cart_shop").click(function() {
					var itemid = $(this).attr("data-id");
					ajaxGet("${cxt!}/linkinfo/doAddCart", {
						itemid: itemid
					}, function(rtn) {
						if(rtn.code != 1) {
							layer.msg(JSON.stringify(rtn), {
								icon: 2
							});
							return;
						}
						$("#cart_size").text("(" + rtn.data + ")");
					})
					$(this).parent().parent().remove();
				})
			})

			function doHaodanku() {
				var word = $("#word").val();
				localStorage.setItem("word", word);

				ajaxGet("${cxt!}/linkinfo/doHaodanku", {
					page: 1,
					keyword: word
				}, function(rtn) {
					if(rtn.code != 1) {
						layer.msg(JSON.stringify(rtn), {
							icon: 2
						});
						return;
					}
					layer.msg("操作成功！", {
						icon: 1,
						time: 600
					}, function() {
						window.location.reload();
					});
				});
			}

			function doAliMama() {
				var word = $("#word").val();
				localStorage.setItem("word", word);
				if(!word) {
					layer.msg("请输入要抓取的关键词 ！", {
						icon: 0
					});
					return;
				}

				var timestamp = (new Date()).getTime();
				window.open("https://pub.alimama.com/promo/search/index.htm?q=" + encodeURIComponent(word) + "&_t=" + timestamp + "&toPage=1&dpyhq=1&yxjh=1&queryType=0&sortType=7");
			}

			function doReset() {
				layer.confirm('确定删除吗？', {
					btn: ['全部', '选品库']
				}, function(i) {
					ajaxGet("${cxt!}/linkinfo/doReset", {}, function(rtn) {
						if(rtn.code != 1) {
							layer.msg(JSON.stringify(rtn), {
								icon: 2
							});
							return;
						}
						layer.msg("操作成功！", {
							icon: 1,
							time: 600
						}, function() {
							window.location.reload();
						});
					})
				}, function(i) {
					ajaxGet("${cxt!}/linkinfo/doDelete", {}, function(rtn) {
						if(rtn.code != 1) {
							layer.msg(JSON.stringify(rtn), {
								icon: 2
							});
							return;
						}
						layer.msg("操作成功！", {
							icon: 1,
							time: 600
						}, function() {
							window.location.reload();
						});
					})
				})
			}

			function doUpdateItem(itemid) {
				ajaxGet("${cxt!}/linkinfo/doUpdateItem", {
					itemid: itemid
				}, function(rtn) {
					if(rtn.code != 1) {
						layer.msg(JSON.stringify(rtn), {
							icon: 2
						});
						return;
					}
					layer.msg("操作成功！", {
						icon: 1,
						time: 600
					}, function() {
						window.location.reload();
					});
				})
			}

			function showChaquan(content) {
				var html = '';
				html += '<div class="box-body">';
				html += '  <div class="col-sm-12">';
				html += '    <div class="form-group">'
				html += '      <textarea id="src_content" rows="20" style ="height:100px" type="text" class="form-control title" placeholder="输入需要转链的链接">' + content + '</textarea>'
				html += '    </div>';
				html += '    <div class="form-group">'
				html += '      <button onclick="doChaquan()" class="btn btn-primary">转链</button>'
				html += '      <button  class="btn btn-info wechat-copy" data-clipboard-text="">复制</button>'
				html += '      <span id="copy_succ" class="text-primary" style ="display:none" >复制成功</span>'
				html += '    </div>';
				html += '  </div>';
				html += '  <div class="col-sm-12">';
				html += '    <div class="form-group" id="wechat-copy-main">'
				html += '    </div>';
				html += '  </div>';
				html += '</div>';

				layer.open({
					closeBtn: 1,
					title: '查券',
					area: ['600px', '550px'],
					content: html,
					btn: []
				});
			}

			function hdkChaQuan() {
				var E = window.wangEditor;
				editor = new E('#editor');
				var html = '';
				html += '<div class="box-body">';
				html += '  <div class="col-sm-12">';
				html += '    <div class="form-group">'
				html += '<div id="editor">';

				html += '    </div>';
				html += '    </div>';

				html += '    <div class="form-group">'
				html += '      <button onclick="doChaquanHDK()" class="btn btn-primary">转链</button>'
				html += '      <button  class="btn btn-info wechat-copy" data-clipboard-text="">复制</button>'
				html += '      <button  class="btn btn-warning" onclick="doFaHaoByQun()" >发号</button>'
				html += '      <span id="copy_succ" class="text-primary" style ="display:none" >复制成功</span>'
				html += '    </div>';

				html += '  </div>';

				html += '  <div class="col-sm-12">';
				html += '    <div class="form-group" id="wechat-copy-main">'
				html += '    </div>';
				html += '  </div>';

				html += '  </div>';

				layer.open({
					closeBtn: 1,
					title: '查券',
					area: ['600px', '550px'],
					content: html,
					btn: [],
					success: function() {
						editor.create();
					},
					yes: function() {

					}
				});
			}

			function doChaquanHDK() {
				$("#copy_succ").attr("style", "display: none;");
				var editor2 = editor.txt.html();

				ajaxPost("${cxt!}/linkinfo/doChangeHDK", {
					editor: editor2
				}, function(rtn) {
					if(rtn.code != 1) {
						layer.msg(rtn.msg, {
							icon: 2
						});
						return;
					}
					$("#wechat-copy-main").empty();

					$("#wechat-copy-main").append(rtn.data);
					editor.txt.clear();

					$("#wechat-copy-main img").attr("style", "width: 200px;");

					$(".wechat-copy").click(function(t) {
						var t = document.getElementById("wechat-copy-main");
						copyFunction(t, ".wechat-copy", "文案复制成功");
					});
				})
			}

			function doChaquan() {
				var src_content = $("#src_content").val();
				if(!src_content) {
					layer.msg('请输入链接或者淘口令');
					return;
				}
				$("#copy_succ").attr("style", "display: none;");

				ajaxPost("${cxt!}/linkinfo/doChaquan", {
					pkey: $('#pkey').val(),
					content: src_content
				}, function(rtn) {
					if(rtn.code != 1) {
						layer.msg(rtn.msg, {
							icon: 2
						});
						return;
					}
					$("#wechat-copy-main").empty();
					$("#wechat-copy-main").append(rtn.data);

					$(".wechat-copy").click(function(t) {
						var t = document.getElementById("wechat-copy-main");
						//var t = document.getElementsByClassName("wechat-copy-main2");
						copyFunction(t, ".wechat-copy", "文案复制成功");
					});
				})
			}

			var copyFunction = function(t, a, i) {
				var e = new ClipboardJS(a, {
					target: function() {
						return t
					}
				});
				e.on("success", function(t) {
						$("#copy_succ").attr("style", "display: block;");
						t.clearSelection();
					}),
					e.on("error", function(t) {
						console.log('复制失败');
						t.clearSelection()
					})
			};

			function doCreate() {
				var have_word = localStorage.getItem("word");

				layer.confirm('确定生成链接吗？', function(i) {
					ajaxGet("${cxt!}/linkinfo/doCreate", {
						remark: have_word
					}, function(rtn) {
						if(rtn.code != 1) {
							layer.msg(JSON.stringify(rtn), {
								icon: 2
							});
							return;
						}

						var html = '';
						html += '<div class="box-body" id="zhaoquan">';
						html += '  <div class="col-sm-12">';
						html += '    <div class="form-group">'
						html += '      <textarea rows="20" cols="5" style ="height:200px"  id="content"  type="text" class="form-control">' + rtn.data + '</textarea>'
						html += '    </div>';

						html += '    <div class="form-group">'
						html += '      <button onclick="doFaHao()" class="btn btn-primary">发号</button>'
						html += '    </div>';

						html += '  </div>';
						html += '</div>';
						layer.open({
							closeBtn: 1,
							title: '信息',
							area: ['500px', ],
							content: html,
							btn: []
						});
					})
				})
			}

			function doFaHao() {
				var content = $("#content").text();
				console.log(content);
				ajaxPost("${cxt!}/linkinfo/doFaHao", {
					content: content
				}, function(rtn) {
					if(rtn.code != 1) {
						layer.msg(JSON.stringify(rtn), {
							icon: 2
						});
						return;
					}
					layer.msg("操作成功！", {
						icon: 1,
						time: 600
					}, function() {
						window.location.reload();
					});
				})
			}

			function doFaHaoByQun() {
				var editor2 = editor.txt.html();
				console.log(editor2);
				ajaxPost("${cxt!}/linkinfo/doFaHaoByQun", {
					editor: editor2,
				}, function(rtn) {
					if(rtn.code != 1) {
						layer.msg(JSON.stringify(rtn), {
							icon: 2
						});
						return;
					}

					editor.txt.clear();

					//					layer.msg("操作成功！", {
					//						icon: 1,
					//						time: 600
					//					}, function() {
					//						
					//					});
				})
			}
		</script>
	</body>

</html>