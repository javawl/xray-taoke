<!DOCTYPE html>	
<html>	
<head>	
  <meta charset="utf-8">	
  <meta http-equiv="X-UA-Compatible" content="IE=edge">	
  <title>管理控制台 | 系统设置</title>	
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <link rel="stylesheet" href="${cxt!}/addon/jQueryPage/jquery.page.css">
  <link rel="stylesheet" href="${cxt!}/addon/datepicker/datepicker3.css">
  <#include "../../inc/inc.html">
</head>	
<body class="hold-transition skin-blue sidebar-mini">	
	<div class="wrapper">	
		<#include "../../inc/header.html">	
	  <div class="content-wrapper">	
	  		<section class="content-header">	
		      <ol class="breadcrumb" style="left: 10px;">	
		        <li><a href="javascript:history.back();"><i class="fa fa-chevron-left"></i>返回</a></li>	
		      </ol>	
		      <h1><small></small></h1>	
		    </section>	
		    <section class="content">	
			      <div class="box box-primary">	
			        <div class="box-header">	
			            <div class="sequence_list am-text-sm">	
					          <div class="box-tools">	
					          </div>	
					        </div>	
			        </div>	
			        <div class="box-body">	
	          		<div class="row">	
	          			<input id="userid" value="<#if data??>${data.userid!}</#if>" style="display: none;">	
	               
	               	  <div class="col-md-6">	
			          		<div class="form-group">	
		                  <label>请输入旧密码</label>	
		                  <input id="oldpassword" type="password" class="form-control" placeholder="请输入旧密码" value="">	
		               	</div>	
	               	</div>	
	               	 	  <div class="col-md-6">	
			          		<div class="form-group">	
		                  <label>请输入新密码</label>	
		                  <input id="newpassword" type="password" class="form-control" placeholder="请输入新密码" value="">	
		               	</div>	
	               	</div>	
		             
	          		</div>	
			        </div>	
			        <div class="box-footer">	
			         	<div class="btn-group">	
			         		<button type="button" id="submit" class="btn btn-primary">提交</button>	
			         	</div>	
			        </div>	
			      </div>	
		    </section>	
	  </div>	
	  <#include "../../inc/footer.html">	
	</div>	
	<script src="${cxt!}/addon/jQueryPage/jquery.page.js"></script>
    <script src="${cxt!}/addon/select2/select2.full.min.js"></script>
    <script src="${cxt!}/addon/datepicker/bootstrap-datepicker.js"></script>
    <script src="${cxt!}/addon/datepicker/locales/bootstrap-datepicker.zh-CN.js"></script>
	<script>	
		$(document).ready(function() {	
				//提交	
				$("#submit").click(function() {	
						var userid = $("#userid").val();	
						var password = $("#oldpassword").val();
						var newpassword = $("#newpassword").val();
					
					
					
						var ajaxUrl = "${cxt!}/admin/account/doEditPwd"	
					
						ajaxGet(ajaxUrl, {	
								userid: userid,		
								password:password,
								newpassword:newpassword
						}, function(rtn) {	
								if(rtn.code!=1) {	
										layer.msg(rtn.msg, {icon: 2});	
										return;	
								}	
								layer.msg("提交成功！即将返回列表...", {time:500, icon: 1}, function() {	
										location.href = "${cxt!}/admin/user/goList";	
								});	
						})	
				})	
					
		})	
	</script>	
</body>	
</html>	
