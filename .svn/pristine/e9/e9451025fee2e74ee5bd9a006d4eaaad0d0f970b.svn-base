    public void doAddCartByIds() {
        String itemurls = getPara("itemurls");
        String userid = getUserid();
        String[] strs = itemurls.split("\n");
        String itemid = null;
        TbItemVo tbItemVo = null;
        TbItemGy gy = null;
        for (String string : strs) {
            itemid = ParamUtils.getParam(string, "id");

            if (StringUtil.isEmpty(itemid)) {
                itemid = ParamUtils.getParam(string, "itemid");
            }
            try {
                tbItemVo = TbItemService.instance.getItemVo(appid, itemid);
                gy = TbItemService.instance.getItemGy(appid, itemid, null);
                tbItemVo.setCpmoney(gy.getCpmoney());
                tbItemVo.setTkrate(gy.getTkrate());
            } catch (Exception e) {
                // TODO Auto-generated catch block
                e.printStackTrace();
            }
            LinkInfoService.instance.addCartByData(userid, itemid, JSONObject.toJSONString(tbItemVo));
        }

        renderRtn(RtnFactory.succ);
    }

